{
  "name": "paragonie/ciphersweet",
  "description": "Searchable field-level encryption library for CRM software",
  "keywords": [
    "CRM",
    "cryptography",
    "encrypt",
    "encryption",
    "field-level encryption",
    "FIPS 140-2",
    "libsodium",
    "searchable encryption"
  ],
  "license": "ISC",
  "type": "library",
  "authors": [
    {
      "name": "Paragon Initiative Enterprises",
      "email": "security@paragonie.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "ParagonIE\\CipherSweet\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ParagonIE\\CipherSweet\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^5.5|^7|^8",
    "ext-json": "*",
    "ext-openssl": "*",
    "paragonie/constant_time_encoding": "^1.0.4|^2",
    "paragonie/sodium_compat": "^1|^2"
  },
  "require-dev": {
    "phpunit/phpunit": "^4|^5|^6|^7|^8|^9"
  },
  "scripts": {
    "static-analysis": "psalm --no-cache --no-suggestions",
    "test": "phpunit"
  }
}
